<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>@ViewData["Title"]</title>
    
        <environment include="Development">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/css/site.css" />
            <script src="~/js/jquery.js"></script>
            <script src="~/js/site.js"></script>
        </environment>
    </head>
    <body onload="CambiarCelda()">
        <header>
            <div class="logo"><a asp-area="" asp-controller="Home" asp-action="Index"><img  src="~/images/logo.png" alt="Hace click acá para volver a Inicio"></a></div>       
            <input type="checkbox" id="btn-menu">
            <label for="btn-menu"><img style="width:50px;height:50px;"src="~/images/menu.png" alt= "">
            </label>

            <nav class= "menu">
                <ul>  
                    <li><a asp-area="" asp-controller="Inscripcion" asp-action="Inscripcion"><img style="width:20px;height:20px;"src="~/images/calendario.png" alt=""> Inscripción</a></li>
                    <li><a asp-area="" asp-controller="MateriasAprobadas" asp-action="MateriasAprobadas"><img style="width:20px;height:20px;"src="~/images/aprobadas.png"alt=""> Materias Aprobadas</a></li>
                    <li><a asp-area="" asp-controller="Amigos" asp-action="Amigos"><img style="width:20px;height:20px ;"src="~/images/amigos.png"alt=""> Amigos</a></li>
                    <li><a asp-area="" asp-controller="Login" asp-action="Logout"><img style="width:20px;height:20px ;"src="~/images/salir.png"alt=""> Salir</a></li>
                </ul>
            </nav>
        </header>

         @RenderBody()
         @RenderSection("Scripts", required: false)
    </body>
    <div id="footer">
       <footer> 
            <br>
            <p>By Agustín Biondi, Camila Comentti & Tomás Wainberg ©</p>    
       </footer>
    </div>
</html>
